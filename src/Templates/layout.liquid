{% assign directoryPrefix = "" %}
{% for i in (1..level) %}
	{% assign directoryPrefix = directoryPrefix + "../" %}
{% endfor %}

<html>
	<head>
		<link rel="stylesheet" type="text/css" href="{{ directoryPrefix }}MainStyle.css" />
		<title>Ian Wold{% if title != "" %} | {{ title }} {% endif %}</title>
	</head>
	<body>
		<div class="wrapper">
			<div class="header">
				<div class="title">
					<a href="{{ directoryPrefix }}index.html">Ian Wold</a>
				</div>
				<div class="navigation">
					<ul>
						<li><a class="{% if highlight == 'projects' %}active{% endif %}" href="{{ directoryPrefix }}projects.html">Projects</a></li>
						<li><a class="{% if highlight == 'resume' %}active{% endif %}" href="{{ directoryPrefix }}resume.html">Resume</a></li>
						<li><a class="{% if highlight == 'blog' %}active{% endif %}" href="{{ directoryPrefix }}blog.html">Blog</a></li>
						<li><a class="{% if highlight == 'contact' %}active{% endif %}" href="{{ directoryPrefix }}contact.html">Contact</a></li>
					</ul>
				</div>
			</div>

			<div class="content-wrapper">
				<div class="content">
					{{ content | raw }}
				</div>
			</div>

			<div class="footer-wrapper">
				<div class="footer">
					<div class="footer-left">
						Copyright &copy; Ian Wold. Site generated by <a href="https://github.com/ianwold/Metalsharp">Metalsharp</a>.
					</div>
					<div class="footer-right">
						Find me on <a href="https://github.com/ianwold">GitHub</a>, <a href="http://linked.in/ianwold">LinkedIn</a>, <a href="http://discord.gg/ianwold">Discord</a>, <a href="http://instagram.com/ianwold">Instagram</a>, and <a href="http://twitter.com/ianwold">Twitter</a>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
